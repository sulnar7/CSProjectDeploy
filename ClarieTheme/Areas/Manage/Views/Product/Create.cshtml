@model Product
@{
    ViewData["Title"] = "Create";
}


<form method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label asp-for="Photo">Photo</label>
        <input asp-for="Photo" accept="image/*" class="form-control">
        <span asp-validation-for="@Model.Photo" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Title">Title</label>
        <input asp-for="Title" class="form-control">
        <span asp-validation-for="@Model.Title" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="OldPrice">Price</label>
        <input asp-for="OldPrice" class="form-control">
        <span asp-validation-for="@Model.OldPrice" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Price">Discount Price</label>
        <input asp-for="Price" class="form-control">
        <span asp-validation-for="@Model.Price" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>

