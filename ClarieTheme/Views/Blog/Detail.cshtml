@model BlogDetailVM
@{
    ViewData["Title"] = "Detail";
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Clarie-theme</title>
    <link rel="stylesheet" href="~/assets/css/bootstrap.css">
    <link rel="stylesheet" href="~/assets/css/blogdetail.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.2.0/css/all.min.css">
</head>

<body>
    <div class="container1">
        <div class="row align-items-center justify-content-between">
            <div class="col-lg-6">
                <img src="~/assets/images/blog/headerlogo.jpg" alt="logo">
            </div>
        </div>
        <div class="nav ">
            <div id="mySidenav" class="sidenav">
                <a href="javascript:void(0)" class="closebtn " onclick="closeNav()">&times;</a>
                <a asp-controller="home" asp-action="index" class="border-top border-bottom py-2">Home</a>
                <a asp-controller="product" asp-action="index" class="border-bottom py-2">Products</a>
                <a asp-controller="catalog" asp-action="index" class="border-bottom py-2">Catalog</a>
                <a asp-controller="contact" asp-action="index" class="border-bottom py-2">Contact</a>
                <a asp-controller="about" asp-action="index" class="border-bottom py-2">About</a>
                <a asp-controller="services" asp-action="index" class="border-bottom py-2">Services</a>
                <a asp-controller="blog" asp-action="index" class="border-bottom py-2">Blog</a>
                @if (User.Identity.IsAuthenticated)
                {
                    <a asp-controller="account" asp-action="logout" class="border-bottom py-2">Logout</a>
                }
                @if (User.IsInRole("Admin"))
                {
                    <a asp-area="manage" asp-controller="dashboard" asp-action="index" class="border-bottom py-2">Admin</a>
                }
            </div>
            <span style="font-size:18px;cursor:pointer;padding-top: 6px;padding-right: 5px;" onclick="openNav()">
                &#9776; Menu
            </span>
            <a asp-controller="search" asp-action="index"><i class="fa-solid fa-magnifying-glass"></i></a>
            <a asp-controller="account" asp-action="login"><i class="fa-regular fa-user"></i></a>
            <a asp-controller="basket" asp-action="index" class="position-relative">
                <i class="fa-solid fa-box-archive"></i> <span class="cartt shop-cart">0</span>
            </a>
        </div>
    </div>
    <div class="main">
        <h1>@Model.Blog.Title</h1>
        <h5>
            <a asp-controller="home" asp-action="index">Home</a>/ <a asp-controller="blog" asp-action="index">News</a> 
        </h5>
    </div>
    <div class="blog">
        <img src="~/assets/images/blog/@Model.Blog.Image" alt="">
        <h3><a asp-controller="blog" asp-action="detail">@Model.Blog.Title</a></h3>
        <div id="detail">
            <i class="fa-solid fa-calendar-days"></i>
            <p>@Model.Blog.Date</p>
            <i class="fa-solid fa-comment-dots"></i>
            <p>@Model.Blog.Comment Comment</p>
            <i class="fa-regular fa-circle-user"></i>
            <p>@Model.Blog.Author</p>
        </div>
        <div id="text">
            <p>
               @Model.Blog.Description
            </p>
        </div>
        <div class="share">
            <div id="left">
                <i class="fa-solid fa-tag"></i>
                <p> Ceramic, Pottery</p>
            </div>
            <div id="right">
                <p>Share with us:</p>
                <a href="https://www.facebook.com/"> <i class="fa-brands fa-facebook-f"></i></a>
                <a href="https://twitter.com/"> <i class="fa-brands fa-twitter"></i></a>
                <a href="https://www.pinterest.com/"> <i class="fa-brands fa-pinterest"></i></a>
                <a href="https://www.google.com/"> <i class="fa-brands fa-google"></i></a>
            </div>
        </div>
        <div class="btn">
            <div id="shopbtn">
                <a asp-controller="blog" asp-action="detail"><button>Older Post</button></a>
            </div>
        </div>
        <div class="commnt">
            <h4><i class="fa-solid fa-comment-dots"></i> 1 Comment</h4>
            <div class="content">
                <div id="data">
                    <p><i class="fa-solid fa-calendar-days"></i>December 15, 2021</p>
                    <p><i class="fa-regular fa-circle-user"></i>Ramamoorthi Muthusamu</p>
                </div>
                <div id="txt">
                    <p>
                        Massa vitae tortor condimentum lacinia quis vel eros donec ac. Enim ut tellus elementum sagittis vitae.
                        Massa sapien faucibus et molestie ac feugiat. Tincidunt ornare massa eget egestas purus viverra accumsan.
                        Metus aliquam eleifend mi in nulla posuere.
                    </p>
                </div>
            </div>
            <h4>Leave a comment</h4>
            <div id="input">
                <input type="text" placeholder="Name">
                <input type="email" placeholder="Email">
            </div>
            <div id="input">
                <textarea name="Contact" id="contactform" cols="30" rows="10" placeholder="Message"></textarea>
            </div>
            <div id="shopbtn2">
                <a asp-controller="blog" asp-action="index"><button>Post comment</button></a>
            </div>
        </div>
        <div class="py-5">
            <div class="container">
                <div class="row signup align-items-center justify-content-between">
                    <div class="col-lg-4">
                        <img src="https://cdn.shopify.com/s/files/1/0569/6090/9499/files/footer-logo-new-1_x70@2x.png?v=1639659835" class="w-50" alt="">
                    </div>
                    <div class="col-lg-4">
                        <div id="signup">
                            <h2>Don’t be shy - <a href="">Signup</a>and <a href="">stay updated </a>for future</h2>
                            <input type="email" placeholder="Your email address">
                            <button type="submit">Subscribe</button>
                        </div>
                    </div>
                    <div class="col-lg-4">
                        <div id="social">
                            <a href="https://twitter.com/"><i class="fa-brands fa-twitter"></i></a>
                            <a href="https://www.facebook.com/"><i class="fa-brands fa-facebook"></i></a>
                            <a href="https://www.pinterest.com/"><i class="fa-brands fa-pinterest"></i></a>
                            <a href="https://www.instagram.com/"><i class="fa-brands fa-instagram"></i></a>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div>
            <div class="container">
                <div class="footer row">
                    <div id="help" class="col-lg-3">
                        <h5>Help</h5>
                        <a href="" class="px-0">Search</a>
                        <a href="" class="px-0">Career</a>
                        <a href="" class="px-0">Privacy policy</a>
                        <a href="" class="px-0">Terms & conditions</a>
                    </div>
                    <div id="information" class="col-lg-3">
                        <h5>Information</h5>
                        <a href="" class="px-0">Support</a>
                        <a href="" class="px-0">Help</a>
                        <a href="" class="px-0">Shipping Details</a>
                        <a href="" class="px-0">Orders</a>
                    </div>
                    <div id="contact" class="col-lg-3">
                        <h5>Contact us</h5>
                        <h6>Address</h6>
                        <p>No: 58 A, East Madison Street, Baltimore, MD, USA 4508</p>
                        <h6>Phone</h6>
                        <p>0000 - 123 - 456789</p>
                    </div>
                    <div id="footerlogo" class="col-lg-2">
                        <img src="https://cdn.shopify.com/s/files/1/0569/6090/9499/files/home-icon-1.png" class="w-75" alt="">
                    </div>
                </div>
            </div>
        </div>
        <script src="~/assets/js/jquery.js"></script>
        <script src="~/assets/js/blogdetail.js"></script>
</body>
</html>


